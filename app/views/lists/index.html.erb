<div>
  <div class="banner" >
    <div class="container">
      <h1><i class="fas fa-film"></i>LOUNGE</h1>
      <p>Find a movie to watch. Share your favourites.</p>
      <div class="mt-4 btn-div"><%= link_to "Create a new movie list", new_list_path, class: "btn btn-banner" %></div>
    </div>
  </div>
  <div class="cards container my-5">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path("default.jpg") %>)">
        <%= link_to '', list_path(list), class: "card-category-link" %>
        <h3><%= list.name %></h3>
      </div>
    <% end %>
  </div>
</div>
